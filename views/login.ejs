<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>  
  <style>
    body { font-family: 'Poppins', sans-serif; }
  </style>
</head>
<body class="bg-neutral-100 min-h-screen">
  <!-- Login Card -->
  <section class="flex items-center justify-center min-h-screen px-4 py-8">
    <div class="w-full max-w-sm sm:max-w-md bg-white rounded-2xl shadow-xl p-6 sm:p-8 mx-4">
      <h1 class="text-xl sm:text-2xl font-bold text-center text-neutral-800">Login to Your Account</h1>
      <p class="text-xs sm:text-sm text-center text-neutral-500 mt-1">Use your email and password to continue</p>

      <!-- Login form -->
      <form id="loginForm" class="mt-6 sm:mt-8 space-y-4 sm:space-y-5" method="POST" action="/login" novalidate>
        <!-- Email -->
        <div>
          <label for="email" class="block text-sm font-medium mb-1">Email</label>
          <input type="email" id="email" name="email" required
            class="w-full rounded-xl border border-neutral-200 bg-white px-4 py-3 text-sm sm:text-base outline-none focus:border-red-500 focus:ring-2 focus:ring-red-200 transition"
            placeholder="you@example.com" value="" />
          <p id="emailError" class="text-red-600 text-xs sm:text-sm mt-1 hidden">Please enter a valid email address</p>
        </div>

        <!-- Password -->
        <div>
          <label for="password" class="block text-sm font-medium mb-1">Password</label>
          <div class="relative">
            <input type="password" id="password" name="password" required minlength="6"
              class="w-full rounded-xl border border-neutral-200 bg-white px-4 py-3 pr-12 text-sm sm:text-base outline-none focus:border-red-500 focus:ring-2 focus:ring-red-200 transition"
              placeholder="••••••••" />
            <button type="button" id="togglePassword" class="absolute inset-y-0 right-3 flex items-center text-neutral-500 hover:text-neutral-700 transition-colors">
              <!-- Eye open icon -->
             
            </button>
          </div>
          <p id="passwordError" class="text-red-600 text-xs sm:text-sm mt-1 hidden">Password must be at least 6 characters</p>
        </div>

        <!-- Submit -->
        <div class="pt-4">
          <button type="submit"
            class="w-full inline-flex items-center justify-center rounded-full bg-red-600 hover:bg-red-700 active:bg-red-800 text-white font-semibold px-4 py-3 text-sm sm:text-base shadow-md transition-colors duration-200">
            Sign In
          </button>
        </div>
      </form>
      
      <!-- Back to Home Link -->
      <div class="mt-4 text-center">
        <a href="/" class="text-sm text-neutral-600 hover:text-red-600 transition-colors">Back to Home</a>
      </div>
    </div>
  </section>

  <!-- Scripts -->
  <script>
    // Toggle password visibility
    const togglePassword = document.getElementById('togglePassword');
    const passwordField = document.getElementById('password');

    togglePassword.addEventListener('click', () => {
      const isPassword = passwordField.type === 'password';
      passwordField.type = isPassword ? 'text' : 'password';
      
      // Get the current eye icon and replace it entirely
      const eyeIcon = document.getElementById('eyeIcon');
      
      if (isPassword) {
        // Show eye-slash (password visible) - replace entire SVG
        eyeIcon.outerHTML = `<svg id="eyeIcon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 11-4.243-4.243m4.242 4.242L9.88 9.88" />
        </svg>`;
      } else {
        // Show regular eye (password hidden) - replace entire SVG
        eyeIcon.outerHTML = `<svg id="eyeIcon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.25 12s3.75-7.5 9.75-7.5S21.75 12 21.75 12s-3.75 7.5-9.75 7.5S2.25 12 2.25 12z" />
          <circle cx="12" cy="12" r="3" />
        </svg>`;
      }
    });

    // Form validation
    const form = document.getElementById('loginForm');
    const email = document.getElementById('email');
    const emailError = document.getElementById('emailError');
    const passwordError = document.getElementById('passwordError');

    form.addEventListener('submit', (e) => {
      let valid = true;

      // Email validation
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(email.value.trim())) {
        emailError.classList.remove('hidden');
        email.focus();
        valid = false;
      } else {
        emailError.classList.add('hidden');
      }

      // Password validation
      if (passwordField.value.trim().length < 6) {
        passwordError.classList.remove('hidden');
        if (valid) passwordField.focus(); // Only focus if email is valid
        valid = false;
      } else {
        passwordError.classList.add('hidden');
      }

      if (!valid) e.preventDefault();
    });

    // Real-time validation feedback
    email.addEventListener('input', () => {
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (email.value.trim() && !emailRegex.test(email.value.trim())) {
        emailError.classList.remove('hidden');
      } else {
        emailError.classList.add('hidden');
      }
    });

    passwordField.addEventListener('input', () => {
      if (passwordField.value.trim().length > 0 && passwordField.value.trim().length < 6) {
        passwordError.classList.remove('hidden');
      } else {
        passwordError.classList.add('hidden');
      }
    });
  </script>
</body>
</html>